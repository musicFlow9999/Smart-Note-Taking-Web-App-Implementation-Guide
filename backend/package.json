{
  "_comment_for_ai_assistants": "This project runs on Windows PowerShell locally, NOT Linux containers. Use Windows file paths and PowerShell commands during development.",
  "_environment": {
    "development_os": "Windows_NT",
    "development_shell": "PowerShell", 
    "container": false,
    "production_target": "Azure App Service Linux"
  },
  "name": "smart-notes-backend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "node test/server.test.js",
    "test:enhanced": "node test/enhanced.test.js",
    "test:auth": "node test/auth.test.js",
    "test:all": "npm test && npm run test:enhanced && npm run test:auth",
    "lint": "eslint -c .eslintrc.json src/ test/",
    "lint:fix": "eslint -c .eslintrc.json src/ test/ --fix",
    "format": "prettier --write src/ test/"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "jsonwebtoken": "^9.0.2",
    "sql.js": "^1.8.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.1.1"
  }
}