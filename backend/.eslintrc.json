{
  "env": { 
    "node": true, 
    "es2021": true,
    "browser": false
  },
  "extends": "eslint:recommended",
  "parserOptions": { 
    "ecmaVersion": "latest", 
    "sourceType": "module" 
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "no-trailing-spaces": "error",
    "eol-last": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "*.min.js",
    "logs/"
  ]
}
